<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".ui.speak">

    <TextView
        android:id="@+id/botspeaking"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
            android:hint="botspeaking"
       android:layout_marginTop="200dp"
       android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/mespeaking"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
  android:layout_centerHorizontal="true"
        android:layout_below="@+id/botspeaking"
       android:hint="mespeaking"
        android:layout_marginTop="50dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/txtspeed"
        android:text="speed"
        android:textSize="20sp"
        />
    <SeekBar
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtspeed"
        android:layout_marginTop="25dp"
        android:id="@+id/spedseekbar"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spedseekbar"
        android:id="@+id/txtpitch"
        android:text="pitch"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        />
    <SeekBar
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtpitch"
        android:layout_marginTop="25dp"
        android:id="@+id/pitchseekbar"
        />

    <Button
        android:id="@+id/btnmespeak"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:layout_marginTop="390dp"
        android:background="@drawable/ic_mic"
        android:layout_centerHorizontal="true"
        />





</RelativeLayout>
